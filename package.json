{
    "name": "firestore-idx-blank",
    "version": "1.0.0",
    "description": "Blank Node.js project with Firestore connection",
    "main": "index.js",
    "dependencies": {
        "@faker-js/faker": "9.1.0",
        "@sendgrid/mail": "^8.1.6",
        "axios": "^1.12.2",
        "bcrypt": "^6.0.0",
        "body-parser": "^2.2.0",
        "csv-parser": "^3.2.0",
        "dotenv": "^17.2.3",
        "express": "^5.1.0",
        "express-rate-limit": "^7.1.0",
        "firebase-admin": "^12.1.1",
        "fs": "^0.0.1-security",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "twilio": "^5.10.2"
    },
    "scripts": {
        "start": "node server.js",
        "test": "node test.js",
        "emulator": "firebase emulators:start",
        "migrate:dev": "firebase emulators:exec 'node csvMigration.js' --only firestore",
        "docker:build": "docker build -t teamslinkies:latest .",
        "docker:build:dev": "docker build -t teamslinkies:dev -f Dockerfile.dev .",
        "docker:run": "docker-compose up",
        "docker:run:detached": "docker-compose up -d",
        "docker:run:dev": "docker-compose -f docker-compose.dev.yml up",
        "docker:stop": "docker-compose down",
        "docker:logs": "docker-compose logs -f",
        "docker:clean": "docker-compose down -v && docker system prune -f",
        "gcr:build": "docker build -t us-central1-docker.pkg.dev/slinkies501backend/teamslinkies/teamslinkies:latest .",
        "gcr:push": "docker push us-central1-docker.pkg.dev/slinkies501backend/teamslinkies/teamslinkies:latest",
        "gcr:deploy": "gcloud run deploy teamslinkies --image us-central1-docker.pkg.dev/slinkies501backend/teamslinkies/teamslinkies:latest --region us-central1 --allow-unauthenticated --port 3000",
        "gcr:logs": "gcloud logging read 'resource.type=cloud_run_revision' --limit 50",
        "gcr:url": "gcloud run services describe teamslinkies --region us-central1 --format='value(status.url)'"
    },
    "devDependencies": {
        "firebase-tools": "^14.17.0"
    }
}
